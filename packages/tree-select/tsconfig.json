{
	"compilerOptions": {
		"outDir": "./dist/esm",
		"module": "esnext",
		"declaration": true,
		"declarationDir": "types",

		"esModuleInterop": true,
		"moduleResolution": "node",
		"lib": [ "es5", "es2015.collection" ],
		"types": [ "node" ],
		"target": "es5",

		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"files": [ "src/index.ts" ],
	"exclude": [ "**/test/**/*", "**/docs/**/*" ]
}
